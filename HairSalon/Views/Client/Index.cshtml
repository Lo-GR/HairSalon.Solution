@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (Model.Count == 0)
{
  <h3> No Clients have been added yet!</h3>
}

@foreach (Client element in Model)
{
  <li>@Html.ActionLink($"{element.Name}", "Details", new {id = element.ClientId}) Assigned to: @element.Stylist.Name</li>
}

<p>@Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("View Stylist Index", "Index", "Stylist")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p> 