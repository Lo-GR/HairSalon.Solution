@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1> Stylists at this store</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
}
<ul>
  @foreach(Stylist element in Model)
  {
    <li>@Html.ActionLink($"{element.Name}", "Details", new {id = element.StylistId})</li>
  }
</ul>

<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p> 